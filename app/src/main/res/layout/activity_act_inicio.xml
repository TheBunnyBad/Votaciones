<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActInicio">

    <EditText
        android:id="@+id/txtNombre"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su nombre"/>

    <EditText
        android:id="@+id/txtCedula"
        android:gravity="center"
        android:layout_below="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su cÃ©dula"/>

    <Button
        android:id="@+id/btnAccionCiudadano"
        android:background="@drawable/button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/txtCedula"/>

    <TextView
        android:id="@+id/txtAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAccionCiudadano"
        android:gravity="center"
        android:text="Soy admnistrador"
        android:textColor="#28F"/>
</RelativeLayout>